<Defs>
  <ThingDef ParentName="BaseGun">
    <defName>Bastion_ArmGammaGun</defName>
    <label>E-Headhunter Launcher</label>
    <description>An advanced micro-rocket launcher with target interception protocols built in. Weapons like these were purpose built to crack armor and take out tough targets.</description>
    <graphicData>
      <texPath>Bastion/Weapons/Gamma_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawOffset>(0, 0, -0.2)</drawOffset>
    </graphicData>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <smeltable>false</smeltable>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <WorkToMake>24000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>1.7</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bastion_GammaRocket</defaultProjectile>
        <warmupTime>1.7</warmupTime>
        <range>25</range>
        <soundCast>Shot_ChargeBlaster</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <forcedMissRadius>0.01</forcedMissRadius>

      </li>
    </verbs>
    <weaponTags>
      <li>BastionGammaGun</li>
    </weaponTags>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef>
    <defName>Bastion_GammaRocket</defName>
    <label>Impact Rocket</label>
    <thingClass>Projectile_Explosive</thingClass>
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <useHitPoints>False</useHitPoints>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bastion_RocketImpact</damageDef>
      <explosionRadius>0.6</explosionRadius>
      <damageAmountBase>14</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>

</Defs>